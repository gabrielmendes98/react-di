{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "target": "es5",
    "jsx": "react-jsx",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "coverage", "build"]
}
